<div class="main memos-new">
  <div class="container">
    <h1 class="form-heading">今日はどんな言葉をかけよう？</h1>
    <%= form_tag("/memos/create") do %>
      <div class="form">
        <div class="form-body">
          <% @memo.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <textarea name="content"><%= @memo.content%></textarea>
          <input type="submit" value="メモする">
        </div>
      </div>
    <% end %>
  </div>
</div>